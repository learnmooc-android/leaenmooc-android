<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/video_top"/>

    <com.sina.sinavideo.sdk.VDVideoView
        android:id="@+id/vd_video_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#fff"
        app:layerAttrs="@array/sv_videoview_layers2">
    </com.sina.sinavideo.sdk.VDVideoView>

    <include layout="@layout/video_content_indicator"/>

    <com.upc.learnmooc.view.CommunityViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
