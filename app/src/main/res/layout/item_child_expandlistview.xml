<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_thumbnail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/html"/>

        <TextView
            android:id="@+id/tv_course_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Html5"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_learner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="26"
            android:textColor="@color/word_color"
            android:textSize="12sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_second_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_thumbnail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/html"/>

        <TextView
            android:id="@+id/tv_course_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Html5"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_learner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="26"
            android:textColor="@color/word_color"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>