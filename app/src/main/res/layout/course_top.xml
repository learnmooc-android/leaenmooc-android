<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/top_bar_color"
    android:layout_height="56dp"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/iv_history"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:onClick="ToCourseClassify"
        android:padding="16dp"
        android:src="@drawable/course_classify"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/iv_history"
        android:layout_toRightOf="@+id/iv_history"
        android:layout_width="wrap_content"
        android:onClick="TurnToLogin"
        android:text="分类"
        android:textColor="@color/title_word_color"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/iv_course_search"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_course_history"
        android:layout_toStartOf="@+id/iv_course_history"
        android:layout_width="wrap_content"
        android:onClick="ToSearchCourse"
        android:padding="16dp"
        android:src="@drawable/course_search"/>

    <ImageView
        android:id="@+id/iv_course_history"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:onClick="ToCourseHistory"
        android:padding="16dp"
        android:src="@drawable/course_history"/>
</RelativeLayout>