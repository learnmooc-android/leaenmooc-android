<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/course_title_color">

        <ImageView
            android:id="@+id/iv_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:onClick="ToCourseClassify"
            android:padding="16dp"
            android:src="@drawable/course_classify"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/iv_classify"
            android:layout_toRightOf="@+id/iv_classify"
            android:onClick="TurnToLogin"
            android:text="分类"
            android:textColor="@color/title_word_color"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_course_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_course_history"
            android:layout_toStartOf="@+id/iv_course_history"
            android:onClick="ToSearchCourse"
            android:padding="16dp"
            android:src="@drawable/course_search"/>

        <ImageView
            android:id="@+id/iv_course_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:onClick="ToCourseHistory"
            android:padding="16dp"
            android:src="@drawable/course_history"/>
    </RelativeLayout>
</LinearLayout>