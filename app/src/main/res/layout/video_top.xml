<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/top_bar_color">

    <ImageView
        android:id="@+id/iv_course_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:onClick="ToMainCourse"
        android:padding="16dp"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_course_back"
        android:layout_toRightOf="@+id/iv_course_back"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Scala程序设计——基础篇 "
        android:textColor="@color/colorWhite"/>

    <ImageView
        android:id="@+id/iv_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_course_title"
        android:layout_toEndOf="@+id/tv_course_title"
        android:layout_marginLeft="40dp"
        android:background="@drawable/collection"/>

    <ImageView
        android:id="@+id/iv_article_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:onClick="ArticleShare"
        android:layout_toLeftOf="@+id/iv_note"
        android:layout_toStartOf="@+id/iv_note"
        android:src="@drawable/download"/>

    <ImageView
        android:id="@+id/iv_note"
        android:src="@drawable/note"
        android:padding="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>